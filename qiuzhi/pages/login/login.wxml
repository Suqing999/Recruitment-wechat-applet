<view class="mcontainer">
    <view class="item">
        <image src="/images/logo.png" class="image"/>
    </view>

    <view class="item">
       <view class="login-item">
       	    <view class="login-item-info">用户名</view>
            <view><input bindinput="username" /></view>
       </view>
       <view class="login-item">
            <view class="login-item-info">密码</view>
            <view class="login-pwd">
            
            <input style="flex-grow:1" password="true"  bindinput="password"/> 
            
            <navigator url="../../pages/wjmima/wjmima">
                 <text> 忘记密码 </text>
            </navigator>
          
            
            </view>
       </view>

         <view class="login-item">
            <view class="login-item-info">验证码</view>
            <view class="login-pwd">
            
            <input style="flex-grow:1" password="true"  bindinput="yzm"/> 
            
            <navigator url="../../pages/wjmima/wjmima">
                 <text> {{code}} </text>
            </navigator>
          
            
            </view>
       </view>
       <view class="login-item bottom">
            <button class="login-btn" bindtap="loginQQ">登录</button>
       </view>
    </view>


    <view class="item bottom-info">
      <button  class="login-btn2"  bindtap="registQQ">
       <view> 没有账户? <text> 注册 </text> </view>
      
      </button>
      
    </view>


</view>